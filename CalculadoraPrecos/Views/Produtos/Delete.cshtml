@model CalculadoraPrecos.Models.Produto

@{
    ViewData["Title"] = "Excluir";
}

<h1>@ViewData["Title"]</h1>

<h3>
    Quer mesmo excluir esse produto?
    Não será possível recuperá-lo.
</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CriadoEm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CriadoEm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UltimaAtualizacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UltimaAtualizacao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
<br />
<div><a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a></div>
